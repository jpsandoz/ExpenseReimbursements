<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
<!--    serverlets go here-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ex.webapp.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeeHomeServlet</servlet-name>
        <servlet-class>com.ex.webapp.servlets.EmployeeHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeHomeServlet</servlet-name>
        <url-pattern>/employeehome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestReimbursementServlet</servlet-name>
        <servlet-class>com.ex.webapp.servlets.RequestReimbursementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestReimbursementServlet</servlet-name>
        <url-pattern>/requestSubmit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SuccessfulSubmissionServlet</servlet-name>
        <servlet-class>com.ex.webapp.servlets.SuccessfulSubmissionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SuccessfulSubmissionServlet</servlet-name>
        <url-pattern>/submit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.ex.webapp.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManagerHomeServlet</servlet-name>
        <servlet-class>com.ex.webapp.servlets.ManagerHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerHomeServlet</servlet-name>
        <url-pattern>/managerhome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewAllEmployeesServlet</servlet-name>
        <servlet-class>com.ex.webapp.servlets.ViewAllEmployeesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAllEmployeesServlet</servlet-name>
        <url-pattern>/viewEmployees</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyProfileServlet</servlet-name>
        <servlet-class>com.ex.webapp.servlets.MyProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyProfileServlet</servlet-name>
        <url-pattern>/myProfile</url-pattern>
    </servlet-mapping>
</web-app>